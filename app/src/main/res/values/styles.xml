<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="poppinsWhite500">
        <item name="android:fontFamily">@font/popins_regular_500</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/bigger_font_size</item>
    </style>
    
    <style name="poppinsWhite700">
        <item name="android:fontFamily">@font/popins_regular_700</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/bigger_font_size</item>
    </style>

    <style name="editTexStyle" parent="poppinsWhite500">
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">textUri</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>