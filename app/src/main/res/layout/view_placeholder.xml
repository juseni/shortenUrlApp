<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/title_imageView"
        android:layout_width="@dimen/title_size"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_logo"
        android:layout_marginTop="@dimen/margin_25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/placeholder_imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_imageView" />

    <TextView
        android:id="@+id/subtitle_TextView"
        style="@style/poppinsWhite700"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16dp"
        android:paddingHorizontal="@dimen/margin_16dp"
        android:text="@string/title_placeholder_label"
        android:textColor="@color/grayish_violet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/placeholder_imageView" />

    <TextView
        android:id="@+id/description_TextView"
        style="@style/poppinsWhite500"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_2dp"
        android:gravity="center"
        android:text="@string/description_placeholder_label"
        android:textColor="@color/grayish_violet"
        android:textSize="@dimen/font_size"
        app:layout_constraintEnd_toEndOf="@+id/subtitle_TextView"
        app:layout_constraintStart_toStartOf="@+id/subtitle_TextView"
        app:layout_constraintTop_toBottomOf="@+id/subtitle_TextView" />

</androidx.constraintlayout.widget.ConstraintLayout>